<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/meditorDb?zeroDateTimeBehavior=convertToNull</property>
    <property name="hibernate.connection.username">root</property>
    <mapping resource="MeditorPersistence/Institution.hbm.xml"/>
    <mapping resource="MeditorPersistence/City.hbm.xml"/>
    <mapping resource="MeditorPersistence/Cycle.hbm.xml"/>
    <mapping resource="MeditorPersistence/UserType.hbm.xml"/>
    <mapping resource="MeditorPersistence/Doctor.hbm.xml"/>
    <!-- <mapping resource="MeditorPersistence/Admin.hbm.xml"/> -->
    <mapping resource="MeditorPersistence/GeographicalArea.hbm.xml"/>
    <mapping resource="MeditorPersistence/Group.hbm.xml"/>
    <mapping resource="MeditorPersistence/Visit.hbm.xml"/>
    <!--<mapping resource="MeditorPersistence/Visitor.hbm.xml"/>-->
    <mapping resource="MeditorPersistence/User.hbm.xml"/>
    <mapping resource="MeditorPersistence/Specialty.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
