<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginSrvlt</servlet-name>
        <servlet-class>MeditorServlets.LoginSrvlt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssignVisitorSrvlt</servlet-name>
        <servlet-class>MeditorServlets.AssignVisitorSrvlt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteDoctorSrvlt</servlet-name>
        <servlet-class>MeditorServlets.DeleteDoctorSrvlt</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FiltersSrvlt</servlet-name>
        <servlet-class>MeditorServlets.AsyncUpdateDoctorList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AsyncUpdateDoctorList</servlet-name>
        <servlet-class>MeditorServlets.AsyncUpdateDoctorList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AsyncUpdateVisitorList</servlet-name>
        <servlet-class>MeditorServlets.AsyncUpdateVisitorList</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginSrvlt</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>LogoutSrvlt</servlet-name>
        <servlet-class>MeditorServlets.LogoutSrvlt</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutSrvlt</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssignVisitorSrvlt</servlet-name>
        <url-pattern>/AssignVisitor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteDoctorSrvlt</servlet-name>
        <url-pattern>/DeleteDoctor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AsyncUpdateDoctorList</servlet-name>
        <url-pattern>/AsyncUpdateDoctorList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AsyncUpdateVisitorList</servlet-name>
        <url-pattern>/AsyncUpdateVisitorList</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
